@page
@using System.Linq
@model Grafos.Pages.CarreterasModel
@{
}

<h1>Crear Carretera</h1>

<form method="post">

    <div class="mb-3">
        <label asp-for="NuevaCarretera.CiudadOrigenId" class="form-label">Ciudad Origen</label>
        <select asp-for="NuevaCarretera.CiudadOrigenId" asp-items="Model.OrigenSelect" class="form-select">
            <option value="">-- Seleccione ciudad origen --</option>
        </select>
        <span asp-validation-for="NuevaCarretera.CiudadOrigenId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevaCarretera.CiudadDestinoId" class="form-label">Ciudad Destino</label>
        <select asp-for="NuevaCarretera.CiudadDestinoId" asp-items="Model.DestinoSelect" class="form-select">
            <option value="">-- Seleccione ciudad destino --</option>
        </select>
        <span asp-validation-for="NuevaCarretera.CiudadDestinoId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevaCarretera.TipoCarreteraId" class="form-label">Tipo de carretera</label>
        <select asp-for="NuevaCarretera.TipoCarreteraId" asp-items="Model.TipoSelect" class="form-select">
            <option value="">-- Seleccione tipo --</option>
        </select>
        <span asp-validation-for="NuevaCarretera.TipoCarreteraId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevaCarretera.DistanciaKm" class="form-label">Distancia (km)</label>
        <input asp-for="NuevaCarretera.DistanciaKm" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NuevaCarretera.DistanciaKm" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevaCarretera.TiempoEstimado" class="form-label">Tiempo estimado (horas)</label>
        <input asp-for="NuevaCarretera.TiempoEstimado" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NuevaCarretera.TiempoEstimado" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="NuevaCarretera.Estado" class="form-check-input" />
        <label asp-for="NuevaCarretera.Estado" class="form-check-label">Activa</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<hr />

<h2>Carreteras guardadas</h2>

@if (Model.ListaCarreteras != null && Model.ListaCarreteras.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Origen</th>
                <th>Destino</th>
                <th>Tipo</th>
                <th>Distancia (km)</th>
                <th>Tiempo (h)</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.ListaCarreteras)
            {
                <tr>
                    <td>@c.CarreteraId</td>
                    <td>@c.CiudadOrigen?.Nombre</td>
                    <td>@c.CiudadDestino?.Nombre</td>
                    <td>@c.Tipo?.Nombre</td>
                    <td>@c.DistanciaKm</td>
                    <td>@c.TiempoEstimado</td>
                    <td>@(c.Estado ? "Activa" : "Inactiva")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay carreteras registradas.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



